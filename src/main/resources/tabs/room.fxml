<Tab xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.co.rossbinden.teensy.controller.tab.RoomTab">
    <BorderPane>
        <top>
            <VBox>
                <HBox>
                    <Label text="ID" textAlignment="CENTER" maxWidth="Infinity" maxHeight="Infinity">
                        <HBox.margin>
                            <Insets topRightBottomLeft="8.0" />
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="id">
                        <HBox.margin>
                            <Insets topRightBottomLeft="8.0" />
                        </HBox.margin>
                    </TextField>
                    <Label text="Name" textAlignment="CENTER" maxWidth="Infinity" maxHeight="Infinity">
                        <HBox.margin>
                            <Insets topRightBottomLeft="8.0" />
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="name">
                        <HBox.margin>
                            <Insets topRightBottomLeft="8.0" />
                        </HBox.margin>
                    </TextField>
                    <Label text="Palette" textAlignment="CENTER" maxWidth="Infinity" maxHeight="Infinity">
                        <HBox.margin>
                            <Insets topRightBottomLeft="8.0" />
                        </HBox.margin>
                    </Label>
                    <ComboBox fx:id="palette">
                        <HBox.margin>
                            <Insets topRightBottomLeft="8.0" />
                        </HBox.margin>
                    </ComboBox>
                </HBox>
            </VBox>
        </top>
        <left>
            <TreeView showRoot="false" maxWidth="Infinity" maxHeight="Infinity" fx:id="tree">
                <TreeItem value="Root">
                    <children>
                        <TreeItem fx:id="tiles" value="Tiles" />
                        <TreeItem fx:id="sprites" value="Sprites" />
                        <TreeItem fx:id="items" value="Items" />
                        <TreeItem fx:id="endings" value="Endings" />
                    </children>
                </TreeItem>
            </TreeView>
        </left>
        <right>
            <TreeView showRoot="false" maxWidth="Infinity" maxHeight="Infinity" fx:id="walls">
                <TreeItem value="Root" />
            </TreeView>
        </right>
        <center>
            <GridPane fx:id="grid" minWidth="512" minHeight="512">
                <columnConstraints>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                    <ColumnConstraints minWidth="8.0" prefWidth="32.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                    <RowConstraints minHeight="8.0" prefHeight="32.0"/>
                </rowConstraints>
            </GridPane>
        </center>
    </BorderPane>
</Tab>
